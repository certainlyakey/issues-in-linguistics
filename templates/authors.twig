{% set tag = craft.tags.group('authors').title(tag).first() %}
{% if not tag %}
	{% exit 404 %}
{% endif %}

{% extends "pubs/index" %}
{% block head macros.title( siteName, 'Публикации — автор ' ~ tag.title ) %}
{% set body_class_modifiers = "not-main-archive" %}
{% set pageheading_suffix = ' автор <em>' ~ tag.title ~ '</em>' %}
{% block content %}
	{% set entries = craft.entries.relatedTo(tag).order('title') %}
	{{ parent() }}
{% endblock %}